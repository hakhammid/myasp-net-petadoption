@model petmanagement.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-4">
                    <h2 class="mb-0 text-center">
                        <i class="fas fa-user-circle me-2"></i>Login to Your Account
                    </h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Login" method="post">
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Password" class="form-label fw-bold">Password</label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-4 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label fw-bold">Remember me</label>
                        </div>
                        
                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary btn-lg py-3">
                                <i class="fas fa-sign-in-alt me-2"></i>Login
                            </button>
                        </div>
                        
                        <div class="text-center">
                            <p class="mb-2">
                                <a href="#" class="text-decoration-none">
                                    <i class="fas fa-key me-1"></i>Forgot your password?
                                </a>
                            </p>
                            <p class="mb-2">
                                Don't have an account? 
                                <a asp-action="Register" class="text-primary text-decoration-none fw-bold">
                                    <i class="fas fa-user-plus me-1"></i>Create an account here
                                </a>
                            </p>
                            <p class="mb-0">
                                Or 
                                <a asp-controller="Pet" asp-action="Browse" class="text-decoration-none">
                                    Browse pets
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>