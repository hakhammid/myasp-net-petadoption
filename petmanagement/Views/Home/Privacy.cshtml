@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <h1 class="display-5 fw-bold text-primary mb-4">Privacy Policy</h1>
                    
                    <div class="privacy-content">
                        <h3 class="h4 fw-bold mb-3">Information We Collect</h3>
                        <p class="mb-4">
                            We collect information you provide directly to us when you create an account, 
                            submit an adoption request, or contact us. This may include your name, email 
                            address, phone number, and adoption preferences.
                        </p>

                        <h3 class="h4 fw-bold mb-3">How We Use Your Information</h3>
                        <ul class="mb-4">
                            <li>To process your adoption requests</li>
                            <li>To communicate with you about available pets</li>
                            <li>To provide customer support</li>
                            <li>To improve our services</li>
                        </ul>

                        <h3 class="h4 fw-bold mb-3">Information Sharing</h3>
                        <p class="mb-4">
                            We do not sell, trade, or otherwise transfer your personal information to 
                            third parties without your consent, except as described in this policy.
                        </p>

                        <h3 class="h4 fw-bold mb-3">Data Security</h3>
                        <p class="mb-4">
                            We implement appropriate security measures to protect your personal information 
                            against unauthorized access, alteration, disclosure, or destruction.
                        </p>

                        <h3 class="h4 fw-bold mb-3">Contact Us</h3>
                        <p class="mb-0">
                            If you have any questions about this Privacy Policy, please contact us at:
                            <br>
                            <strong>Email:</strong> privacy@petadoption.com
                            <br>
                            <strong>Phone:</strong> +1 (555) 123-4567
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>