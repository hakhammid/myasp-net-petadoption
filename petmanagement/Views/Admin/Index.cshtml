@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-primary">
            <i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard
        </h1>
    </div>

    <!-- Stats Cards -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-primary text-uppercase mb-1">
                                Total Pets
                            </div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@ViewBag.Stats.TotalPets</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-paw fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-success text-uppercase mb-1">
                                Available Pets
                            </div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@ViewBag.Stats.AvailablePets</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-heart fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-info text-uppercase mb-1">
                                Adopted Pets
                            </div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@ViewBag.Stats.AdoptedPets</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-home fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-warning text-uppercase mb-1">
                                Pending Requests
                            </div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@ViewBag.Stats.PendingRequests</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-bolt me-1"></i>Quick Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a asp-action="CreatePet" class="btn btn-primary w-100 py-3">
                                <i class="fas fa-plus me-2"></i>Add New Pet
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a asp-action="Pets" class="btn btn-success w-100 py-3">
                                <i class="fas fa-paw me-2"></i>Manage Pets
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a asp-controller="Admin" asp-action="AdoptionRequests" class="btn btn-info w-100 py-3">
                                <i class="fas fa-clipboard-list me-2"></i>View Requests
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-warning w-100 py-3">
                                <i class="fas fa-globe me-2"></i>View Website
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-history me-1"></i>Recent Activity
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center py-5">
                        <i class="fas fa-clock fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No recent activity</h5>
                        <p class="text-muted">Activities will appear here as they happen</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>